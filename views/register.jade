extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign Up
        - if(errorMessage.length != 0) {
          .alert.alert-danger !{errorMessage}
        - }
        form(method='POST' action='/register')
          div.form-group
            label(for='name') Username:
            input#name.form-control(type='text', placeholder='Username' name='username')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')
          div.form-group
            label(for='pw2') Confirm Password:
            input#pw2.form-control(type='password' name='confirmPassword')
          button.btn.btn-primary(type='submit') Sign up
            &nbsp;
          a.btn.btn-default(role='button', href='/login') log in